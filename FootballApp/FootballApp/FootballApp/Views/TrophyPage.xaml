<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FootballApp.TrophyPage">

    <StackLayout HorizontalOptions="CenterAndExpand" FontSize="Title" Margin="20 ">

        <Label Text="LIST OF TROPHIES PER LEAGUE" />
        <Label Text="{Binding league}"/>
        <Label Text="{Binding country}"/>
        <Label Text="{Binding season}"/>
        <Label Text="{Binding place}"/>

    </StackLayout>
</ContentPage>